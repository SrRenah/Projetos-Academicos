programa {
  funcao inicio() {
    real nota[3], soma=0, media=(soma)/3, falta
    escreva("Quantia de faltas que aluno possui: ")
      leia(falta)
        se(falta>=18)
          escreva("Aluno reprovado por falta!")
        senao se(falta<18)
          para(inteiro i =0; i<3; i++){
            escreva("Digite a nota do aluno: ")
            leia(nota[i])
          soma=soma+nota[i]
          media=(soma)/3}
          limpa()
    se(media>=7)
      escreva("Aluno aprovado!")
    senao se(media>=5)
      escreva("Aluno está de recuperação!")
    senao se(media<5)
      escreva("O aluno está reprovado!")
  }
}
